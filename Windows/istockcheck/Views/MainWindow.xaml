<Window x:Class="com.andrewbennet.istockcheck.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:com.andrewbennet.istockcheck.Views"
        mc:Ignorable="d"
        Title="iStockcheck" Height="400" Width="600"
		ResizeMode="NoResize"
        Loaded="MainWindow_OnLoaded">
	<StackPanel Orientation="Vertical">
		<TabControl>
			<TabItem Header="iPhone Models" DataContext="iPhoneModelsControlView">
				<views:iPhoneModelsControl Margin="5,5,5,5"/>
			</TabItem>
			<TabItem Header="Stores">
				<views:AppleStoresControl Margin="5,5,5,5"/>
			</TabItem>
			<TabItem Header="Notifications">
				<views:NotificationsControl Margin="5,5,5,5"/>
			</TabItem>
		</TabControl>
	</StackPanel>
</Window>
