<Window x:Class="com.andrewbennet.istockcheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:com.andrewbennet.istockcheck.Views"
        mc:Ignorable="d"
        Title="iStockcheck" Height="200" Width="400" MaxHeight="200" MaxWidth="400" MinHeight="200" MinWidth="400"
        Loaded="MainWindow_OnLoaded">
    <Grid>
		<StackPanel Orientation="Vertical">
			<TabControl>
				<TabItem Header="iPhone Models" DataContext="iPhoneModelsControlView">
					<views:iPhoneModelsControl/>
				</TabItem>
				<TabItem Header="Stores">
					<StackPanel>
						<CheckBox>Store 1</CheckBox>
						<CheckBox>Store 2</CheckBox>
					</StackPanel>
				</TabItem>
				<TabItem Header="Notifications">
					<Label Content="Content goes here..." />
				</TabItem>
			</TabControl>
			<Label Name="WindowMessageLabel" DockPanel.Dock="Bottom" Content="Checking for stock..."/>
		</StackPanel>
	</Grid>
</Window>
